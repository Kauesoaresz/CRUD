<h1>Cadastrar novo cabelo</h1>
<form action="/cabelos" method="POST">
    <div class="form-group">
        <label for="nome">Nome do cabelo:</label>
        <input type="text" class="form-control" id="nome" name="nome" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição:</label>
        <textarea id="descricao" class="form-control" name="descricao" required></textarea>
    </div>
    <div class="form-group">
        <label for="preco">Preço:</label>
        <input type="number" class="form-control" id="preco" name="preco" required>
    </div>
    <div class="form-group">
        <label for="cabelo">cabelo:</label>
        <select class="form-control" id="cabelo" name="cabelo" required>
            <% cabelos.forEach(cabelo => { %>
                <option value="<%= cabelo.id %>"><%= cabelo.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

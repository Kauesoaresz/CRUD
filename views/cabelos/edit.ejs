<h1>Editar Cabelo</h1>

<form action="/cabelos/<%= cabelo.id %>?_method=PUT" method="POST">
  <div class="form-group">
    <label for="nome">Nome:</label>
    <input type="text" class="form-control" id="nome" name="nome" value="<%= cabelo.nome %>" required>
  </div>
  <div class="form-group">
    <label for="descricao">Descrição:</label>
    <textarea class="form-control" id="descricao" name="descricao" required><%= cabelo.descricao %></textarea>
  </div>
  <div class="form-group">
    <label for="preco">Preço:</label>
    <input type="number" step="0.01" class="form-control" id="preco" name="preco" value="<%= cabelo.preco %>" required>
  </div>
  <div class="form-group">
    <label for="categoria">Categoria:</label>
    <input type="number" class="form-control" id="categoria" name="categoria" value="<%= cabelo.categoria %>" required>
  </div>
  <button type="submit" class="btn btn-warning">Salvar</button>
</form>
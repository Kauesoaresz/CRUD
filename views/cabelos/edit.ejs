<h1>Editar cabelo</h1>

<form action="/cabelos/<%= cabelo.id %>?_method=PUT" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" value="<%= cabelo.nome %>" required>
    </div>
    <div class="form-group">
        <label for="descricao">Descrição</label>
        <input type="text" class="form-control" id="descricao" name="descricao" value="<%= cabelo.descricao %>" required>
    </div>
    <div class="form-group">
        <label for="preco">Preço</label>
        <input type="number" class="form-control" id="preco" name="preco" value="<%= cabelo.preco %>" required>
    </div>
    <div class="form-group">
        <label for="quantidade">Quantidade</label>
        <input type="number" class="form-control" id="quantidade" name="quantidade" value="<%= cabelo.quantidade %>" required>
    </div>
    <div class="form-group">
        <label for="cabelo_id">cabelo</label>
        <select class="form-control" id="cabelo" name="cabelo" required>
            <% cabelos.forEach(function(cabelo) { %>
                <option value="<%= cabelo.id %>" <%= cabelo.cabelo == cabelo.id ? 'selected' : '' %>><%= cabelo.nome %></option>
            <% }); %>
        </select>
    </div>
    <button type="submit" class="btn btn-warning">Salvar</button>